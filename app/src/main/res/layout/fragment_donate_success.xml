<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="Donation.DonationSuccess"
        android:background="@color/color_1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin200"
            android:background="@drawable/donate_card">


            <ImageView
                android:id="@+id/imgSuccess"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_check_24"
                android:background="@drawable/donation_succes_img"
                android:layout_marginTop="@dimen/margin64"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/color_1" />

            <TextView
                android:id="@+id/donationSuccessTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin32"
                android:text="Donation Success"
                android:textSize="@dimen/margin48"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgSuccess" />

            <View
                android:id="@+id/underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/margin64"
                android:layout_marginTop="@dimen/margin32"
                android:layout_marginEnd="@dimen/margin64"
                android:background="#C5C7C9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/donationSuccessTxt" />

            <TextView
                android:id="@+id/amountTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin64"
                android:layout_marginTop="@dimen/margin32"
                android:text="Amount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMdTime" />

            <TextView
                android:id="@+id/donationNoTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin64"
                android:layout_marginTop="@dimen/margin32"
                android:text="Donation NO"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/underline" />

            <TextView
                android:id="@+id/txtdonationAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin32"
                android:layout_marginEnd="@dimen/margin64"
                android:text="RM"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMoneyDonationTime" />

            <TextView
                android:id="@+id/txtDonationID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin32"
                android:layout_marginEnd="@dimen/margin64"
                android:text="#"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/underline" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/donationDoneBtn"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin80"
                android:layout_marginStart="@dimen/margin64"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="@dimen/margin64"
                android:background="@color/color_1"
                android:text="Done"
                android:textColor="@color/white"
                android:textSize="@dimen/margin32"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/donationNoTxt" />

            <TextView
                android:id="@+id/txtMdDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin64"
                android:layout_marginTop="@dimen/margin32"
                android:text="Date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/donationNoTxt" />

            <TextView
                android:id="@+id/txtMoneyDonationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin32"
                android:layout_marginEnd="@dimen/margin64"
                android:text="#"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtDonationID" />

            <TextView
                android:id="@+id/txtMdTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin64"
                android:layout_marginTop="@dimen/margin32"
                android:text="Time"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMdDate" />

            <TextView
                android:id="@+id/txtMoneyDonationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin32"
                android:layout_marginEnd="@dimen/margin64"
                android:text="#"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMoneyDonationDate" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>
